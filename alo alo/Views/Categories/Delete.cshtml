@model alo_alo.Models.Category

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Index.cshtml";
}
<link href="~/Content/padding.css" rel="stylesheet" />

<div style="margin: 10px auto; width: 70%;">
    <h3 style="text-align:center">
        BẠN CÓ CHẮC CHẮN MUỐN XÓA CATEGORY NÀY?
    </h3>
    <div>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                MÃ CATEGORY
            </dt>
            <dd>
                @Html.DisplayFor(model => model.IDCate)
            </dd>
            <dt>
                TÊN CATEGORY
            </dt>
            <dd>
                @Html.DisplayFor(model => model.NameCate)
            </dd>
        </dl>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(model => model.Id)     // Dùng HiddenFor để truyền được id của category vào hàm cần xoá
            <div class="form-actions no-color">
                <input type="submit" value="XÓA" class="btn btn-danger" /> | @Html.ActionLink("TRỞ LẠI", "Index")
            </div>
        }
    </div>
</div>