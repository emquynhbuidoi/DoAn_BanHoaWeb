@model IEnumerable<alo_alo.Models.Category>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Admin.cshtml";
}


<div style="margin: 10px auto; width: 70%;">
    <h2 style="text-align: center">THÔNG TIN CATEGORIES</h2>
    <p>
        @Html.ActionLink("TẠO MỚI LOẠI SP", "Create", null, new
        {
            @class = "btn btn-primary"
        })

    </p>
    @*Thêm chức năng tìm kiếm catogories*@
    @using (Html.BeginForm("Index", "Categories", FormMethod.Get))
    {
        <p>
            <div class="row justify-content-end">
                <div class="col-lg-3">
                    <input style="height: 45px; border-radius: 4px;" class="form-control" type="text" name="_name" value="" placeholder="Tên sp tìm .." />
                </div>
                <div class="col-lg-1">
                    <button style="margin-left: -20px; border-radius: 4px;" type="submit" class="btn btn-primary">Search</button>
                </div>
            </div>
        </p>
        <br />

        <table class="table">
            <tr>
                <th>
                    MÃ CATEGORY
                </th>
                <th>
                    TÊN CATEGORY
                </th>
                <th>
                    LỆNH
                </th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.IDCate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NameCate)
                    </td>
                    <td>
                        @Html.ActionLink("Sửa", "Edit", new { id = item.Id }, new
                        {
                        @class = "btn btn-success"
                        }) |
                        @Html.ActionLink("Chi tiết", "Details", new { id = item.Id },
                        new { @class = "btn btn-primary" }) |
                        @Html.ActionLink("Xóa", "Delete", new { id = item.Id }, new
                        {
                        @class = "btn btn-danger"
                        })
                    </td>
                </tr>
            }
        </table>
    }
</div>

