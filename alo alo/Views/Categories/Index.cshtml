@model IEnumerable<alo_alo.Models.Category>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Index.cshtml";
}
<link href="~/Content/padding.css" rel="stylesheet" />


<div style="margin: 10px auto; width: 70%;">
    <h2 style="text-align: center">THÔNG TIN CATEGORIES</h2>
    <p>
        @Html.ActionLink("TẠO MỚI LOẠI SP", "Create", null, new
        {
            @class = "btn btn-primary"
        })

    </p>
    <p>
        @*Thêm chức năng tìm kiếm catogories*@
        @using (Html.BeginForm("Index", "Categories", FormMethod.Get))
        {
            <div class="input-group">
                <input type="search" name="_name" class="form-control rounded" placeholder="Search" />
                <input type="submit" value="Search" class="btn btn-primary">
            </div>
        }
    </p>
    <table class="table">
        <tr>
            <th>
                MÃ CATEGORY
            </th>
            <th>
                TÊN CATEGORY
            </th>
            <th>
                LỆNH
            </th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.IDCate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NameCate)
                </td>
                <td>
                    @Html.ActionLink("Sửa", "Edit", new { id = item.Id }, new
                    {
                    @class = "btn btn-success"
                    }) |
                    @Html.ActionLink("Chi tiết", "Details", new { id = item.Id },
                    new { @class = "btn btn-primary" }) |
                    @Html.ActionLink("Xóa", "Delete", new { id = item.Id }, new
                    {
                    @class = "btn btn-danger"
                    })
                </td>
            </tr>
        }
    </table>
</div>

