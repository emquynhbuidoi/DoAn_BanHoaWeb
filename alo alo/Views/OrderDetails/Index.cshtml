@model IEnumerable<alo_alo.Models.OrderDetail>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Admin.cshtml";
}

<div style="margin: 10px auto; width: 70%;">
    <h2 style="text-align: center">THÔNG TIN ĐƠN HÀNG</h2>

    <table class="table">
        <tr>
            <th>
                Số lượng
            </th>
            <th>
                Thành tiền
            </th>
            <th>
                Tên sản phẩm
            </th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Quantity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UnitPrice)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Product.NamePro)
                </td>

                @*<td>
                    @Html.ActionLink("Xoá", "Delete", "OrderDetails", new
                                 {
                                     id = item.ID
                                 }, new { @class = "btn" })
                </td>*@
            </tr>
        }
        <tr style="font-weight:bold; text-align:right; color:red;">
            <td><a href="@Url.Action("Index", "OrderProes")" class="btn">Quay lại</a></td>
            <td colspan="5">Tổng số lượng: @ViewBag.TotalNumber</td>
            <td colspan="1">Tổng tiền: @ViewBag.TotalPrice</td>

        </tr>


    </table>

</div>