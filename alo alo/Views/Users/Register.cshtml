
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_Index.cshtml";
}
<link href="~/Content/padding.css" rel="stylesheet" />

<div style="margin: 10px auto; width: 70%;">
<h2 style="text-align: center">ĐĂNG KÍ THÀNH VIÊN</h2>
@using (Html.BeginForm("Register", "Users"))
{
    @Html.ValidationSummary(true)
    <div class="mb-3 mt-3">
        <label for="name" class="form-label">TÊN:</label>
        <input type="text" class="form-control" id="name"
               name="NameCus" required> @*name phải trùng với name ở CSDL*@
    </div>
    <div class="mb-3 mt-3">
        <label for="email" class="form-label">EMAIL:</label>
        <input type="email" class="form-control" id="email"
               name="EmailCus" required> @*name phải trùng với name ở CSDL*@
        </div>
    <div class="mb-3">
        <label for="pwd" class="form-label">PASSWORD:</label>
        <input type="password" class="form-control" id="pwd"
               name="PassCus" required> @*name phải trùng với name ở CSDL*@
        </div>
    <div class="mb-3 mt-3">
        <label for="phone" class="form-label">ĐIỆN THOẠI:</label>
        <input type="text" class="form-control" id="phone"
               name="PhoneCus" required>@*name phải trùng với name ở CSDL*@
        </div>
    <button type="submit" class="btn btn-primary">XÁC NHẬN</button>
}
</div>